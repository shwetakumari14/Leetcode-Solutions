<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/registerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/black"
            android:padding="10dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/detailsTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <TableRow>
                        <TextView
                            android:text="Artist/Teams"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/artistName"
                            android:layout_height="wrap_content"
                            android:text="Artist/Teams"
                            android:scrollHorizontally="true"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:textColor="@color/green_100"
                            android:layout_width="215dp"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Venue"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/venueName"
                            android:text="Venue"
                            android:scrollHorizontally="true"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:textColor="@color/green_100"
                            android:layout_width="215dp"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Date"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/artistDate"
                            android:text="Date"
                            android:textColor="@color/green_100"
                            android:layout_width="215dp"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Time"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/artistTime"
                            android:text="Time"
                            android:textColor="@color/green_100"
                            android:layout_width="215dp"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Genres"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/artistGenre"
                            android:text="Genres"
                            android:scrollHorizontally="true"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:textColor="@color/green_100"
                            android:layout_width="215dp"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/priceBox">
                        <TextView
                            android:text="Price Range"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/artistPrice"
                            android:text="Price Range"
                            android:textColor="@color/green_100"
                            android:layout_width="215dp"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Ticket Status"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                app:cardCornerRadius="12dp">
                                <TextView
                                    android:id="@+id/ticketStatus"
                                    android:text="Ticket Status"
                                    android:layout_height="32dp"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:padding="4dp"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/green_100"/>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>


                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Buy Ticket At"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/ticketURL"
                            android:layout_width="215dp"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:text="Buy Ticket At Buy Ticket"
                            android:scrollHorizontally="true"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textColor="@color/green_100"
                            android:textStyle="bold" />
                    </TableRow>

                    <!--            <TableRow-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="wrap_content">-->
                    <!--                <ImageView-->
                    <!--                    android:id="@+id/stadiumPic"-->
                    <!--                    android:layout_weight="1"-->
                    <!--                    android:layout_width="100dp"-->
                    <!--                    android:layout_marginTop="30dp"-->
                    <!--                    android:scaleType="centerCrop"-->
                    <!--                    android:layout_height="400dp"-->
                    <!--                    android:src="@mipmap/sample" />-->
                    <!--            </TableRow>-->
                </TableLayout>

                <ImageView
                    android:id="@+id/stadiumPic"
                    android:padding="10dp"
                    android:layout_width="300dp"
                    android:layout_marginLeft="35dp"
                    android:layout_below="@+id/detailsTable"
                    android:gravity="center"
                    android:layout_height="300dp"
                    android:src="@mipmap/sample" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>




</ScrollView>